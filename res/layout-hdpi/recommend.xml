<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bacgroud" >

    <RelativeLayout
        android:id="@+id/recommend_R"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bac_title" >

        <TextView
            android:id="@+id/recommend_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/recommend"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/recommend_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:background="@drawable/back" />
    </RelativeLayout>
    <ImageView 
        android:id="@+id/recommend_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recommend_R"
        android:layout_centerHorizontal="true"
        android:background="@drawable/activity"
        android:layout_margin="10dip"/>
	<TextView 
	    android:id="@+id/recommend_msg"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_below="@id/recommend_R"
	    android:text="@string/recommend_recommend"
	    android:textSize="18sp"
	    android:layout_marginTop="19dip"
	    android:layout_marginLeft="30dip"
	    android:layout_marginRight="30dip"
	    android:textColor="@color/white"
	    />
    <RelativeLayout
        android:id="@+id/recommend_R1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" 
        android:layout_below="@id/recommend_img"
        >
		<ImageView 
		    android:id="@+id/recommend_img"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@drawable/recommend_q"
		    android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/recommend_users"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="30sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/recommend_img"
            android:text="@string/yiyou" 
            android:textSize="24sp"
            android:textColor="@color/about_color"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/recommend_img"
            android:text="@string/personrecommend" 
            android:textSize="24sp"
            android:textColor="@color/about_color"/>
    </RelativeLayout>
	<RelativeLayout 
	    android:id="@+id/recommend_user"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/recommend_R1"
	    android:layout_marginTop="40dip">
	   <RelativeLayout 
	        android:id="@+id/recommend_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        >
	        
	        <EditText
	            android:id="@+id/recommend_et_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/telphone"
	            android:layout_marginLeft="10dip"
	            android:gravity="center"
	            />
	        
	    </RelativeLayout>
		
	    <TextView
	        android:id="@+id/recomend_userch"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_toLeftOf="@+id/recommend_name"
	        android:text="@string/recommend_name"
	        android:textColor="@color/about_color"
	        android:textSize="18sp" />

	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_toRightOf="@+id/recommend_name"
	        android:text="@string/recommend_sex"
	        android:textColor="@color/about_color"
	        android:textSize="16sp" />

	</RelativeLayout>
		<RelativeLayout 
	    android:id="@+id/recommend_user1"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/recommend_user"
	    android:layout_marginTop="15dip"
	    >
	    <RelativeLayout 
	        android:id="@+id/recommend_telphone"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        >
	        
	        <EditText 
	            android:id="@+id/recommend_et_telphone"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/telphone"
	            android:layout_marginLeft="10dip"
	            android:gravity="center"
	            android:phoneNumber="true"
	            />
	       
	    </RelativeLayout>

	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_toLeftOf="@+id/recommend_telphone"
	        android:text="@string/recommend_telphone"
	        android:textSize="18sp"
	        android:textColor="@color/about_color" />

	</RelativeLayout>
		<RelativeLayout 
	    android:id="@+id/recommend_user2"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/recommend_user1"
	    android:layout_marginTop="15dip">
	    <RelativeLayout 
	        android:id="@+id/recommend_type"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        >

	       <TextView
	           android:id="@+id/recommend_tv_type"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_alignBottom="@+id/recommend_sp_type"
	           android:layout_alignParentTop="true"
	           android:layout_centerInParent="true"
	           android:textColor="@color/black"
	           android:layout_marginTop="12dip"
	           android:textSize="18sp" />

	        <Spinner
	            android:id="@+id/recommend_sp_type"
	            android:layout_width="150dp"
	            android:layout_height="40dp"
	            android:background="@drawable/type"
	            android:layout_marginLeft="10dip"
	            />
	       	<ImageView 
	       	    android:id="@+id/xiala"
	       	    android:layout_width="wrap_content"
	       	    android:layout_height="wrap_content"
	       	    android:background="@drawable/pull_down"
	       	    android:layout_centerVertical="true"
	       	    android:layout_marginRight="5dip"
	       	    android:layout_alignRight="@id/recommend_sp_type"/>
	    </RelativeLayout>

	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_toLeftOf="@+id/recommend_type"
	        android:text="@string/recommend_type"
	        android:textSize="18sp"
	        android:textColor="@color/about_color"
	         />

	</RelativeLayout>

    <Button
        android:id="@+id/recommend_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recommend_user2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/submit" 
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"/>

</RelativeLayout>